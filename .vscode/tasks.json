{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "WSL: g++ build (PQ)",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "/usr/bin/g++ -std=c++11 -Wall -Wextra -g -O0 -fno-omit-frame-pointer -fno-inline *.cpp -o build.out"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"],
      "detail": "Build all .cpp into build.out (WSL)."
    }
  ]
}
